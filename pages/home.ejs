<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./home.css">
    <style>
        #outer {
            display: flex;
            justify-content: space-around;

        }

        img {
            border-radius: 5px;

        }

        #rec {
            margin-left: 50px;
            margin: 30px;
        }

        #navb {
            padding: 20px;
            background-color: rgb(58, 60, 61);
            display: flex;
            justify-content: space-around;
            align-items: center;
            color: white;
        }

        #dis {
            display: flex;
            align-items: center;

        }

        #in {
            width: 500px;
            padding: 2px;
            border-radius: 4px;
        }

        #btn a {
            padding: 2px;
            text-decoration: none;
            color: black;

        }

        #btn {
            background-color: crimson;
            border-radius: 3px;

        }

        nav {
            padding: 15px;
            display: flex;
            justify-content: space-around;
            background-color: rgb(29, 39, 42);
        }

        #lot a {
            padding: 8px;
            text-decoration: none;
            color: white;
        }

        #mot a {
            padding: 8px;
            text-decoration: none;
            color: white;
        }

        #logo {
            margin-right: 20px;
        }

        #kim {
            margin-top: 40px;
            background-color: rgb(46, 47, 68);
            padding-bottom: 40px;
            color: white;
        }

        #zak {
            margin: 50px;
            width: 90%;
        }
    </style>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</head>

<body>
    <nav id="navb">
        <div id="dis">
            <img id="logo" height="30px" width="100px" src="https://in.bmscdn.com/webin/common/icons/logo.svg" alt="">
            <input id="in" type="text" placeholder="Search for Movies, Events, Plays, Sports and Activities">
        </div>
        <div>
            <label for="location">Location</label>
            <select name="location" id="">
                <option value="">Banglore</option>
                <option>Delhi</option>
                <OPtion>Hyderabad</OPtion>
                <OPtion>Mumbai</OPtion>
                <OPtion>Chennai</OPtion>
                <OPtion>Tirupati</OPtion>
        </div>
        </select>
        <button id="btn"><a href="">sign in</a></button>
    </nav>
    <nav>
        <div id="lot">
            <a href="">Movies </a>
            <a href="">Plays </a>
            <a href="">Streams </a>
            <a href="">Events </a>
            <a href="">Sports </a>
            <a href="">Activities </a>
            <a href="">Buzz</a>
        </div>
        <div id="mot">
            <a href="">ListYourShow</a>
            <a href="">Corporates</a>
            <a href="">Offers</a>
            <a href="">GiftCards</a>
        </div>
    </nav>
    <div id="boot">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1660034264454_ssp_web.jpg"
                        class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1659702309292_bms_web.jpg"
                        class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://assets-in.bmscdn.com/promotions/cms/creatives/1658744889327_movie_web.jpg"
                        class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="container">
        <h1 id="rec">Recommended Movies</h1>
        <div id="outer">

            <% movies.map((a)=>{ %>
                <div id="inner">
                    <img height="300px" width="200px" src=<%=a.poster %> alt="">
                    <h4>
                        <%= a.title %>
                    </h4>
                    <h6>
                        <%= a.genere %>
                    </h6>
                </div>
                <% })%>
        </div>

        <div>
            <img id="zak"
                src="https://assets-in.bmscdn.com/discovery-catalog/collections/tr:w-1440,h-120:q-80/lead-in-v3-collection-202102040828.png"
                alt="">
        </div>
    </div>
    <div class="container">
        <h1 id="rec">The Best of Entertainment</h1>
        <div id="outer">
            <% joas.map((p)=>{ %>
                <img height="250px" width="150px" src=<%=p.pos %> alt="">
                <% }) %>
        </div>
    </div>
    <div id="kim">
        <div class="container">

            <img width="100%"
                src="https://assets-in.bmscdn.com/discovery-catalog/collections/tr:w-1440,h-120:q-80/premiere-rupay-banner-web-collection-202104230555.png"
                alt="">

        </div>
        <div class="container">
            <h1 id="rec">premiers</h1>
            <h3 id="rec">Brand new releases every Friday</h3>
            <div id="outer">
                <% last.map((k)=>{ %>
                    <img height="300px" width="200px" src=<%=k.post %> alt="">
                    <% }) %>
            </div>
        </div>
    </div>
</body>

</html>